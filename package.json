{
  "name": "bozeman-javascript-directory",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "react-scripts": "0.1.0"
  },
  "dependencies": {
    "axios": "^0.13.1",
    "classnames": "^2.2.5",
    "firebase": "^3.2.0",
    "react": "^15.2.1",
    "react-addons-css-transition-group": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-fittext": "0.0.7",
    "react-mixin": "^3.0.5",
    "react-router": "^2.6.0",
    "reactfire": "^1.0.0",
    "replace": "^0.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "replace_html_assets": "replace '((/)(main\\.)?(\\w)+\\.(?:css|js|woff|woff2|eot|ttf|png|ico))' 'https://bozeman-javascript.github.io/directory$1' ./build/ -r --include='*.html,*.css' --exclude='*.js'",
    "replace_js_assets": "replace '((main\\.)?(\\w+)\\.(?:png))' 'https://bozeman-javascript.github.io/directory/$1' ./build/ -r --include='*.js'",
    "deploy": "rm -rf build && react-scripts build && npm run replace_html_assets && npm run replace_js_assets && git add . && git commit -m 'Build and deploy' && git push origin --delete gh-pages && git subtree push --prefix build origin gh-pages"
  }
}
